{
  "npm.packageManager": "pnpm",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": "explicit",
    "source.fixAll": "explicit"
  },
  "typescript.workspaceSymbols.scope": "currentProject",
  "search.exclude": {
    "**/node_modules": true,
    "**/*.code-search": true,
    "**/.zig-cache": true,
    "**/zig-out": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/.zig-cache": true,
    "**/zig-out": true
  },
  "zig.zls.enableBuildOnSave": true,
  "zig.zls.buildOnSaveArgs": ["check"],
  "cSpell.words": [
    "allo",
    "anyerror",
    "anyopaque",
    "anytype",
    "APDU",
    "autodoc",
    "callconv",
    "deinit",
    "IFSC",
    "IFSD",
    "MGMT",
    "napi",
    "npmignore",
    "orelse",
    "pcsc",
    "SMARTCARD",
    "tokota",
    "usingnamespace",
    "usize"
  ],
  "cSpell.enabled": true
}
